<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:weightSum="1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1"
        android:orientation="vertical"
        android:background="#ff4a40ff"
        android:touchscreenBlocksFocus="true"
        android:transitionGroup="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/imageViewJudul"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/image_logo_vpos"
            android:layout_marginBottom="60dp"
            android:contentDescription="@string/app_name"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text=" Pembuat"
            android:id="@+id/textView2"
            android:textColor="@android:color/white"
            android:textSize="10pt"
            android:textStyle="bold"
            android:inputType="none"
            android:background="#ffff2a28"
            android:gravity="center|left"
            android:layout_margin="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:id="@+id/textView3"
                android:textStyle="bold"
                android:textSize="8pt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yanto Hariyono"
                android:id="@+id/textView4"
                android:textStyle="bold"
                android:textSize="8pt"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surel"
                android:id="@+id/textView5"
                android:textStyle="bold"
                android:textSize="8pt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mrthx.89@gmail.com"
                android:id="@+id/textView6"
                android:textStyle="bold"
                android:textSize="8pt"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Situs"
                android:id="@+id/textView7"
                android:textStyle="bold"
                android:textSize="8pt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="http://mrthx.wordpress.com"
                android:id="@+id/textView8"
                android:textStyle="bold"
                android:textSize="8pt"
                android:gravity="right" />
        </LinearLayout>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text=" Donasi"
            android:id="@+id/textView9"
            android:textColor="@android:color/white"
            android:textSize="10pt"
            android:textStyle="bold"
            android:inputType="none"
            android:background="#ffff2a28"
            android:gravity="center|left"
            android:layout_margin="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Bank"
                android:id="@+id/textView10"
                android:textStyle="bold"
                android:textSize="8pt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mandiri KCP Naripan BDG"
                android:id="@+id/textView11"
                android:textStyle="bold"
                android:textSize="8pt"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Akun"
                android:id="@+id/textView12"
                android:textStyle="bold"
                android:textSize="8pt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yanto Hariyono"
                android:id="@+id/textView13"
                android:textStyle="bold"
                android:textSize="8pt"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Rekening"
                android:id="@+id/textView14"
                android:textStyle="bold"
                android:textSize="8pt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="900-00-3164677-2"
                android:id="@+id/textView15"
                android:textStyle="bold"
                android:textSize="8pt"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSetting"
                android:background="@drawable/windows_style_indigo"
                android:contentDescription="Setting"
                android:text="Setting"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonBack"
                android:background="@drawable/windows_style_brown"
                android:contentDescription="Exit"
                android:text="Back"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
